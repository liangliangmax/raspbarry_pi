wifi:
    配置网络， 在 /etc/netplay/*.yaml 文件中增加WIFI配置
    network:
    ethernets:
        eth0:
            dhcp4: true
    version: 2    # 以上是原有的,下面的是新增
    wifis:
        wlan0:
            dhcp4: true
            access-points:
                "wlan-name":
                    password: "password here"
                    
xubuntu:                    
    sudo apt install xubuntu-desktop

